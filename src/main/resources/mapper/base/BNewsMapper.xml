<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.cashbang.core.modules.venuesbook.dao.BNewsMapper">
	
	<select id="listForPage" resultType="cn.cashbang.core.modules.venuesbook.entity.BNewsEntity">
		SELECT
			`nid`, 
			`title`, 
			`news_img`, 
			`news_content`, 
			`isuse`, 
			`create_time`, 
			`update_time`
		FROM
			b_news
		ORDER BY
			nid DESC
	</select>
	
	<insert id="save">
		INSERT INTO b_news (
			`nid`, 
			`title`, 
			`news_img`, 
			`news_content`, 
			`isuse`, 
			`create_time`, 
			`update_time`
		)
		VALUES (
			#{nid}, 
			#{title}, 
			#{newsImg}, 
			#{newsContent}, 
			#{isuse}, 
			#{createTime}, 
			#{updateTime}
		)
	</insert>
	
	<select id="getObjectById" resultType="cn.cashbang.core.modules.venuesbook.entity.BNewsEntity">
		SELECT
			`nid`, 
			`title`, 
			`news_img`, 
			`news_content`, 
			`isuse`, 
			`create_time`, 
			`update_time`
		FROM
			b_news
		WHERE
			nid = #{nid}
	</select>
	
	<update id="update">
		UPDATE b_news
	 	<set>
			<if test="title != null">`title` = #{title}, </if>
			<if test="newsImg != null">`news_img` = #{newsImg}, </if>
			<if test="newsContent != null">`news_content` = #{newsContent}, </if>
			<if test="isuse != null">`isuse` = #{isuse}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}</if>
		</set>
		WHERE
			nid = #{nid}
	</update>
	
	<delete id="batchRemove">
		DELETE
		FROM
			b_news
		WHERE
			nid IN
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>