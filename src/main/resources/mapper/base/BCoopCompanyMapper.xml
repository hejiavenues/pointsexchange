<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.cashbang.core.modules.venuesbook.dao.BCoopCompanyMapper">
	
	<select id="listForPage" resultType="cn.cashbang.core.modules.venuesbook.entity.BCoopCompanyEntity">
		SELECT
			`cid`, 
			`company_logo`, 
			`company_name`, 
			`isuse`, 
			`create_time`, 
			`update_time`
		FROM
			b_coop_company
		ORDER BY
			cid DESC
	</select>
	
	<insert id="save">
		INSERT INTO b_coop_company (
			`cid`, 
			`company_logo`, 
			`company_name`, 
			`isuse`, 
			`create_time`, 
			`update_time`
		)
		VALUES (
			#{cid}, 
			#{companyLogo}, 
			#{companyName}, 
			#{isuse}, 
			#{createTime}, 
			#{updateTime}
		)
	</insert>
	
	<select id="getObjectById" resultType="cn.cashbang.core.modules.venuesbook.entity.BCoopCompanyEntity">
		SELECT
			`cid`, 
			`company_logo`, 
			`company_name`, 
			`isuse`, 
			`create_time`, 
			`update_time`
		FROM
			b_coop_company
		WHERE
			cid = #{cid}
	</select>
	
	<update id="update">
		UPDATE b_coop_company
	 	<set>
			<if test="companyLogo != null">`company_logo` = #{companyLogo}, </if>
			<if test="companyName != null">`company_name` = #{companyName}, </if>
			<if test="isuse != null">`isuse` = #{isuse}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}</if>
		</set>
		WHERE
			cid = #{cid}
	</update>
	
	<delete id="batchRemove">
		DELETE
		FROM
			b_coop_company
		WHERE
			cid IN
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>