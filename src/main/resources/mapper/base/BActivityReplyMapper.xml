<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.cashbang.core.modules.venuesbook.dao.BActivityReplyMapper">
	
	<select id="listForPage" resultType="cn.cashbang.core.modules.venuesbook.entity.BActivityReplyEntity">
		SELECT
			bar.`reply_id`, 
			bar.`activity_id`, 
			(select ba.activity_id_name from b_activities ba where ba.activity_id = bar.activity_id) as activityName,
			bar.`uid`, 
			(select bu.uname from b_user bu where bu.uid = bar.uid) as uName,
			bar.`content`, 
			bar.`create_time`, 
			bar.`update_time`
		FROM
			b_activity_reply bar 
			<where>
			<if test="activityId != null and activityId != ''">
				and	`activity_id` = #{activityId} 
			</if>
			</where>
		ORDER BY
			bar.create_time DESC
	</select>
	
	<insert id="save">
		INSERT INTO b_activity_reply (
			`reply_id`, 
			`activity_id`, 
			`uid`, 
			`content`, 
			`create_time`, 
			`update_time`
		)
		VALUES (
			#{replyId}, 
			#{activityId}, 
			#{uid}, 
			#{content}, 
			#{createTime}, 
			#{updateTime}
		)
	</insert>
	
	<select id="getObjectById" resultType="cn.cashbang.core.modules.venuesbook.entity.BActivityReplyEntity">
		SELECT
			`reply_id`, 
			`activity_id`, 
			`uid`, 
			`content`, 
			`create_time`, 
			`update_time`
		FROM
			b_activity_reply
		WHERE
			reply_id = #{replyId}
	</select>
	
	<update id="update">
		UPDATE b_activity_reply
	 	<set>
			<if test="activityId != null">`activity_id` = #{activityId}, </if>
			<if test="uid != null">`uid` = #{uid}, </if>
			<if test="content != null">`content` = #{content}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}</if>
		</set>
		WHERE
			reply_id = #{replyId}
	</update>
	
	<delete id="batchRemove">
		DELETE
		FROM
			b_activity_reply
		WHERE
			reply_id IN
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>